{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "dom"],
        "composite": true,
        "declarationMap": true,
        "sourceMap": true,
        "isolatedModules": true,
        "strict": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "rootDir": ".",
        "outDir": "./lib/esm"
    },
    "files": [],
    "include": [],
    "references": [
        {
            "path": "./src/sjcl"
        },
        {
            "path": "./src"
        }
    ]
}
